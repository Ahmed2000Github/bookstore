@code{
    private async Task Onclick()
    {
        Console.WriteLine("nsnsnnsnnsnn");
        await LocalStorage.SetItemAsync("AccessToken", "");
        await LocalStorage.SetItemAsync("RefreshToken", "");
        await AuthStateProvider.GetAuthenticationStateAsync();
        NavigationManager.NavigateTo("/admin/login");
    }
}